<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/perri_bleach">


    <androidx.cardview.widget.CardView
        android:id="@+id/height_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:backgroundTint="#028174"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        tools:layout_editor_absoluteY="215dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Height"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>


    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/height_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/height_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/height_field">

    </EditText>

    <androidx.cardview.widget.CardView
        android:id="@+id/weight_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#028174"
        app:layout_constraintTop_toBottomOf="@+id/height_field"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Weight"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>



    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/weight_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/weight_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weight_field">

    </EditText>

    <androidx.cardview.widget.CardView
        android:id="@+id/age_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#028174"
        app:layout_constraintTop_toBottomOf="@+id/weight_field"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Age"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>



    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/age_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/age_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/age_field">

    </EditText>

    <Button
        android:id="@+id/btnSaveUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="186dp"
        android:text="Save"
        android:textColor="#fff"
        android:background="@drawable/rectangle_shape"
        android:backgroundTint="@color/cornflower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>